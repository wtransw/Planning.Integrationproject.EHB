<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <xs:element name="SessionEvent">
        <xs:complexType>
            <xs:sequence>

             <!-- GUID moet min bestaan uit 32 karakters -->
                <xs:element name="UUID_nr" >
                    <xs:simpleType>
                        <xs:restriction base="xs:string">
                            <xs:minLength value="32"/>
                        </xs:restriction>
                    </xs:simpleType>
                </xs:element>

                <!-- SourceEntityId moet hoger dan 0 zijn -->
                <xs:element name="SourceEntityId">
                    <xs:simpleType>
                        <xs:restriction base="xs:string">
                        </xs:restriction>
                    </xs:simpleType>
                </xs:element>

                <!-- EntityType max toegelaten karakters = 30 -->
                <xs:element name="EntityType" >
                    <xs:simpleType>
                        <xs:restriction base="xs:string">
                            <xs:maxLength value="30"></xs:maxLength>
                        </xs:restriction>
                    </xs:simpleType>
                </xs:element>

                <!-- EntityVersion moet hoger zijn dan 0 -->
                <xs:element name="EntityVersion" >
                    <xs:simpleType>
                        <xs:restriction base="xs:integer">
                            <xs:minExclusive value="0" />
                        </xs:restriction>
                    </xs:simpleType>
                </xs:element>

                <!-- Source kan enkel frontend, crm of planning bevatten -->
                <xs:element name="Source">
                    <xs:simpleType>
                        <xs:restriction base="xs:string">
							<xs:enumeration value="FRONTEND" />
							<xs:enumeration value="CRM" />
							<xs:enumeration value="PLANNING" />
                        </xs:restriction>
                    </xs:simpleType>
                </xs:element>

                <!-- Method kan enkel CRUD bevatten -->
                <xs:element name="Method">
                    <xs:simpleType>
                        <xs:restriction base="xs:string">
							<xs:enumeration value="CREATE" />
							<xs:enumeration value="UPDATE" />
							<xs:enumeration value="DELETE" />
                        </xs:restriction>
                    </xs:simpleType>
                </xs:element>

                <!-- Title max toegelaten karakters = 30 -->
                <xs:element name="Title">
                    <xs:simpleType>
                        <xs:restriction base="xs:string">
                            <xs:maxLength value="30"></xs:maxLength>
                        </xs:restriction>
                    </xs:simpleType>
                </xs:element>

                <!-- StartDateUTC volgens dateTime -->
                <xs:element name="StartDateUTC" >
                    <xs:simpleType>
                        <xs:restriction base="xs:dateTime"/>
                    </xs:simpleType>
                </xs:element>

                <!-- EndDateUTC volgens dateTime-->
                <xs:element name="EndDateUTC" >
                    <xs:simpleType>
                        <xs:restriction base="xs:dateTime"/>
                    </xs:simpleType>
                </xs:element>

                <!-- OrganiserUUID moet min 32 karakters hebben -->
                 <xs:element name="OrganiserUUID">
                    <xs:simpleType>
                        <xs:restriction base="xs:string">
                            <xs:minLength value="32"/>
                        </xs:restriction>
                    </xs:simpleType>
                </xs:element>

                 <!-- IsActive kan enkel 0 of 1 zijn -->
                 <xs:element name="IsActive">
                    <xs:simpleType>
                        <xs:restriction base="xs:boolean">							
                        </xs:restriction>
                    </xs:simpleType>
                </xs:element>

            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>